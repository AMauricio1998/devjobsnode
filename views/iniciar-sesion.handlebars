<main class="contenedor">
    <form action="/iniciar-sesion" method="POST" class="default-form">
        <div class="campo">
            <label for="email">E-mail</label>
            <input type="email" name="email" placeholder="Tu E-mail" required>
        </div>
        
        <div class="campo">
            <label for="password">Password</label>
            <input type="password" name="password" placeholder="Tu password" required>
        </div>

        <div class="campo acciones">
            <a href="/crear-cuenta">Crear cuenta</a>
            <a href="/reestablecer-password">Olvidé mi password</a>
        </div>

        <div class="campo">
            <input type="submit" class="btn btn-azul" value="Iniciar sesión">
        </div>
    </form>
</main>