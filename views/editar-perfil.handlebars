<main class="contenedor">
    <form action="/editar-perfil" method="POST" class="default-form" enctype="multipart/form-data">
        <div class="campo">
            <label for="nombre">Nombre:</label>
            <input type="text" name="nombre" placeholder="Tu nombre" required value={{ usuario.nombre }}>
        </div>
        
        <div class="campo">
            <label for="email">Email:</label>
            <input type="email" name="email" placeholder="Tu email" required value={{ usuario.email }}>
        </div>
        
        <div class="campo">
            <label for="password">Password:</label>
            <input type="password" name="password" placeholder="Tu password">
        </div>

        <div class="campo">
            <label for="imagen">Foto de perfil</label>
            <input type="file" name="imagen" placeholder="Tu imagen de perfil">
            <img src="uploads/perfiles/{{usuario.imagen}}" class="admin-perfils">
        </div>

        <div class="campo">
            <input type="submit" value="Guardar Cambios" class="btn btn-azul">
        </div>
    </form>
</main>